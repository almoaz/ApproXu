<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindFriendsActivity"
    android:background="@color/whiteColor">

    <include
        android:id="@+id/find_friends_ap_bar"
        layout="@layout/navigation_ap_bar">

    </include>

    <RelativeLayout
        android:id="@+id/find_friends_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/find_friends_ap_bar"
        android:background="@drawable/registration_input_background"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/find_friends_search"
            android:layout_width="255dp"
            android:layout_height="42dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/whiteColor"
            android:hint="Search friends"
            android:padding="8dp"
            android:textColor="@color/blackColor" />

        <TextView
            android:id="@+id/find_friends_btn"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="-6dp"
            android:layout_toEndOf="@+id/find_friends_search"
            android:background="@drawable/registration_input_background"
            android:padding="10dp"
            android:text="Search"
            android:textAlignment="center"
            android:textSize="18sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_friend_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/find_friends_relative_layout">
    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>