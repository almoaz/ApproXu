<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/groupChat_user_profile_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_icon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:cropToPadding="true" />

    <TextView
        android:id="@+id/group_chat_custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="display userName"
        android:textColor="@color/neviBlue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/group_chat_custom_all_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_chat_custom_profile_name"
        android:text="all user"
        android:textColor="@color/neviBlue"
        android:textSize="14sp"
        android:layout_marginTop="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>