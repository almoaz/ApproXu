<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUniversityActivity">

    <include
        android:id="@+id/edit_university_ap_bar"
        layout="@layout/navigation_ap_bar">

    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/edit_university_ap_bar"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cover_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cover Image"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/university_cover_image_btn"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/cover_image_text"
                android:src="@drawable/blank_cover_image"
                />

            <TextView
                android:id="@+id/slider1_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Slider First Image"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/university_cover_image_btn"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/university_slide1_image_btn"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/slider1_image_text"
                android:src="@drawable/blank_cover_image"
                />

            <TextView
                android:id="@+id/slider2_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Slider Second Image"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/university_slide1_image_btn"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/university_slide2_image_btn"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/slider2_image_text"
                android:src="@drawable/blank_cover_image"
                />

            <TextView
                android:id="@+id/slider3_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Slider Third Image"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/university_slide2_image_btn"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/university_slide3_image_btn"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/slider3_image_text"
                android:src="@drawable/blank_cover_image"
                />

            <TextView
                android:id="@+id/slider4_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Slider First Image"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/university_slide3_image_btn"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/university_slide4_image_btn"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/slider4_image_text"
                android:src="@drawable/blank_cover_image"
                />

            <TextView
                android:id="@+id/slider5_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Slider Second Image"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/university_slide4_image_btn"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/university_slide5_image_btn"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/slider5_image_text"
                android:src="@drawable/blank_cover_image"
                />

            <TextView
                android:id="@+id/slider6_image_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Second Slider Third Image"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/university_slide5_image_btn"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textColor="@color/blackColor"/>

            <ImageView
                android:id="@+id/university_slide6_image_btn"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/slider6_image_text"
                android:src="@drawable/blank_cover_image"
                />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>