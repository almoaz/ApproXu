<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckSDActivity"
    android:background="@color/whiteColor">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/ap_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/student_sd_profile_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whiteColor"
            android:theme="@style/ThemeOverlay.AppCompat.DayNight.ActionBar"
            app:popupTheme="@style/SplashTheme">

            <TextView
                android:id="@+id/student_sd_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blackColor"
                android:text=""
                android:textSize="18sp"/>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ap_bar"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sd_profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:src="@drawable/profile_holder"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/whiteColor"/>

            <TextView
                android:id="@+id/sd_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sd_profile_image"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:text="Full Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blackColor"/>

            <LinearLayout
                android:id="@+id/education_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/sd_full_name"
                android:layout_marginTop="40dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/university_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Education"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/blackColor"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/education_linear_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/education_linear_layout"
                android:orientation="vertical"
                android:background="@color/settingLinearLayoutColor"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_linear_layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="University"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_university_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:hint="none"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Department"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_departments_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:hint="none"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Semester"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_semester_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:hint="none"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Group"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_group_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:hint="none"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="ID No"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_id_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:hint="none"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/education_linear_layout2"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/contact_info"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blackColor"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/address_linear_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_linear_layout"
                android:orientation="vertical"
                android:background="@color/settingLinearLayoutColor"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_linear_layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Email ID"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_email_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:backgroundTint="@color/settingLinearLayoutColor"
                        android:hint="none"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Phone No"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:backgroundTint="@color/settingLinearLayoutColor"
                        android:hint="none"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/information_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/address_linear_layout2"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/profile_icon"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Financial Documents"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/blackColor"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/information_linear_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/information_linear_layout"
                android:orientation="vertical"
                android:background="@color/settingLinearLayoutColor"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_linear_layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Total Fee"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_total_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:backgroundTint="@color/settingLinearLayoutColor"
                        android:hint="none"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Payable Fee"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_payable_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:backgroundTint="@color/settingLinearLayoutColor"
                        android:hint="none"/>

                </LinearLayout>





            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_contact_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@id/information_linear_layout2"
                android:layout_marginTop="1dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/contact_info"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Running Semester Fee"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/blackColor"/>




            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_contact_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/settings_contact_layout"
                android:orientation="vertical"
                android:background="@color/settingLinearLayoutColor"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/education_linear_layout"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Semester Fee"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_semester_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:textSize="16sp"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/settingLinearLayoutColor"
                        android:hint="none"/>

                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:layout_marginLeft="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/settingLinearLayoutTextColor"/>

                <TextView
                    android:id="@+id/sd_semester_payments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/settingLinearLayoutTextColor"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="@color/settingLinearLayoutColor"
                    android:textSize="16sp"
                    android:hint="none"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Due"
                        android:layout_marginLeft="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/settingLinearLayoutTextColor"/>

                    <TextView
                        android:id="@+id/sd_due"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/settingLinearLayoutTextColor"
                        android:layout_marginLeft="5dp"
                        android:backgroundTint="@color/settingLinearLayoutColor"
                        android:textSize="16sp"
                        android:hint="none"/>

                </LinearLayout>



            </LinearLayout>



        </RelativeLayout>


    </ScrollView>

</RelativeLayout>